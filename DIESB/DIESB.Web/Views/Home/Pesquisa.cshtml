@model DIESB.Web.ViewModel.ViewModel
<form action="~/Home/Index" method="post">
    @{
        List<SelectListItem> listItems = new List<SelectListItem>();

        foreach (var item in Model.UFList)
        {
            listItems.Add(new SelectListItem { Text = item.Descricao, Value = item.Descricao });
        }
    }
    <div class="input-group">
        @Html.DropDownListFor(x => x.SelectedUF, listItems, "Estado", new { @class = "selectpicker" })@Html.TextBoxFor(x => x.Pesquisa, new { @class = "form-control", @placeholder = "Nome do programa de pós graduação" })<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
</form>
